<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.crickbit">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:largeHeap="true"
        android:hardwareAccelerated="false"
        android:theme="@style/AppTheme">

        <activity android:name=".ActSplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>



        <activity android:name=".ActDashboard"/>
        <activity android:name=".ActLiveMatchList"/>
        <activity android:name=".ActScoreCard"/>
        <activity android:name=".ActWebUrls"/>


        <activity android:name=".CricketMatchActivity"
            android:label="Live Match"
            android:theme="@style/ScoreTheme">
        </activity>
        <activity android:name=".Main2Activity"
            android:label="SCORE"
            android:theme="@style/ScoreTheme">
         </activity>
    </application>

</manifest>