<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/common_m5d"
    android:layout_marginRight="@dimen/common_m5d">
    <com.cjj.MaterialRefreshLayout
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <android.support.v7.widget.CardView
                android:id="@+id/cardlist_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="vertical"
                card_view:cardUseCompatPadding="true"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="@dimen/common_m5d"
                card_view:cardElevation="@dimen/common_m5d">

                <RelativeLayout
                    android:id="@+id/rlMain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="@dimen/common_m10d"
                    android:gravity="center_vertical">


                    <RelativeLayout
                        android:id="@+id/rlBookingDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >



                        <TextView
                            android:id="@+id/tvName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical|left"

                            android:maxLines="2"
                            android:text="Australia tour of Bangladesh 2017"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_16s"/>

                        <View
                            android:id="@+id/vStatus"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/m_3dp"
                            android:layout_marginTop="@dimen/m_3dp"
                            android:background="@color/gray"
                            android:layout_below="@+id/tvName"
                            />
                        <TextView
                            android:id="@+id/tvDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/vStatus"

                            android:layout_marginTop="@dimen/m_3dp"
                            android:text="Australia tour of Bangladesh 2017Australia tour of Bangladesh 2017Australia tour of Bangladesh 2017Australia tour of Bangladesh 2017Australia tour of Bangladesh 2017Australia tour of Bangladesh 2017Australia tour of Bangladesh 2017Australia tour of Bangladesh 2017Australia tour of Bangladesh 2017Australia tour of Bangladesh 2017"
                            android:singleLine="false"

                            android:textColor="@color/clrTvDetail"
                            android:textSize="@dimen/text_14s"/>

                    </RelativeLayout>

                </RelativeLayout>


            </android.support.v7.widget.CardView>

            <View
                android:id="@+id/vDividerLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    </com.cjj.MaterialRefreshLayout>
</LinearLayout>